{
  "manifest_version": 3,
  "name": "Email Writer Extension",
  "description": "This is a simple AI-Email.",
  "version": "1.0",
  "action": {
    "default_title":"Email Writer Assistant"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions":["http://localhost:8080/*","*://mail.google.com/* "],
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "*://mail.google.com/*"
      ],
      "css":[
        "content.css"
      ],
      "run_at":"document_end"
    }
],
"web_accessible_resources": [
    {
      "resources": [ "icons/*"],
      "matches": [ "*://mail.google.com/*" ]
    }
]
}
